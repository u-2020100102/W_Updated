<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wumble.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Your Profile!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label x:Name="nameSurname"/>
        <Label x:Name="identityNumber"/>
        <Label x:Name="role"/>
        <Button Text="Add Child" x:Name="addChild" Clicked="addChild_clicked"/>
        <Grid x:Name="ChildrenGrid">

        </Grid>
    </VerticalStackLayout>
</ContentPage>