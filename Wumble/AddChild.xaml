<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wumble.AddChild"
             Title="AddChild">
    <VerticalStackLayout>
        <Label 
            Text="Enter your child's id"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="Child" />
        <Button Text="Add as a child" x:Name="Add" Clicked="AddChild_ButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>