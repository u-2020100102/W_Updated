<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wumble.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label 
            Text="Welcome to Wumble!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label
            Text="Username"/>
            <Entry x:Name="Username"/>
            <Label Text="Password"/>
            <Entry x:Name="Password" IsPassword="True"/>
            <Button Text="Log In" x:Name="login" Clicked="login_clicked"/>
            <Button Text="Sign Up" x:Name="signup" Clicked="signup_clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
